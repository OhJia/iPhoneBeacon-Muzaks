<widget id="com.distdans.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>distdans</name>
    <description>
        dist/dans generates music based on proximity to the people around you.
    </description>
    <author email="hello@distdans.com" href="http://distdans.com">
        Jiashan Wu / Jason Sigal
    </author>
    <icon src="www/icons/icon.png" />
    <!-- <platform name="ios"> -->
        <splash src="www/screen/Default~iphone.png" width="320" height="480"/>
        <splash src="www/screen/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="www/screen/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="www/screen/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="www/screen/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="www/screen/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="www/screen/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="www/screen/Default-667h.png" width="750" height="1334"/>
        <splash src="www/screen/Default-736h.png" width="1242" height="2208"/>
        <splash src="www/screen/Default-Landscape-736h.png" width="2208" height="1242"/>
    <!-- </platform> -->
    <content src="index.html" />
    <xcontent src="http://192.168.43.131:4042" />
    <access origin="*" />
    <preference name="DisallowOverscroll" value="false" />
    <preference name="fullscreen" value="true" />
    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance" overwrite="true">
    <false/>
    </gap:config-file>
    <gap:config-file platform="ios" parent="UIStatusBarHidden" overwrite="true"> <true/> </gap:config-file>
    
</widget>
